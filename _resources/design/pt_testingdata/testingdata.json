{

    // Версія стандарту цього файлу, необхідна для сумісності
    "schema_version": 1,

    "compilation": {
        "additional_sources": {
            "enabled": true,
            "path" : ""
        },
        "compiler_arguments": [
            {
                "compiler_id": "",
                "arguments": "{0} --clean"
            }
        ]
    },

    "verification_process": {
        
        "testing": {

            /*
             * Програма-генератор створює файл (файли) вхідних даних
             * зі значеннями, згенерованими за спеціальним алгоритмом.
             */

            "generator": {
                "path": "testing/generator.cs",
                "environment_variables": [
                    {
                        "name": "",
                        "value": ""
                    }
                ]
            },

            /*
             * Програма-чекер перевіряє результати (вихідні дані)
             * програми користувача на правильність та відповідність
             * деяким критеріям, що вказані в умовах до завдання.
             */

            "checker": {
                "path": "testing/checker.cs",
                "use_with_author_solution": true,
                "environment_variables": [
                    {
                        "name": "",
                        "value": ""
                    }
                ]
            },

            /*
             * Авторський розв'язок використовується для
             * отримання авторської (еталонної) відповіді
             * для заданих вхідних даних (використовується
             * у DEBUG режимі, а також при використанні
             * функціоналу динамічної генерації вхідних
             * даних для тестувань).
             */

            "author_solution": {
                "compiler_id": "",
                "path": "author_solution"
            },

            // Відносний шлях до директорії з файлами, необхідними для роботи генератора і чекера.
            "tests_directory_path": "",

            /*
             * Інформація про тести, які виконуються над
             * програмою-розв'язком користувача.
             * 
             * Значення "за замовчуванням" зберігаються
             * у абстрактному тесті з id = 0. Слід зауважити,
             * що змінні середи "за замовчуванням" не замінюються
             * такими, що вказано у окремому тесті, а доповнюються
             * ними - тобто, на кожному тесті будуть доступні
             * змінні середи з абстрактного тесту, а також ті, що
             * ініціалізовано у поточному тесті.
             * 
             * Нумерація ідентифікаторів (id) тестів починається з 1.
             */

            "tests": [
                {
                    "id": 1, // ідентифікатор тесту
                    "comment": "", // видимий для усіх користувачів коментарій до тесту

                    "proc_time_limit": "", // ліміт за процесорним часом виконання
                    "real_time_limit": "", // ліміт за реальним часом виконання

                    "peak_memory_limit": "", // максимальна кількість використаної оперативної пам'яті
                    "exec_arguments": "", // аргументи командного рядка

                    // Змінні середи для поточного тесту (тільки для програми користувача)
                    "environment_variables": [
                        {
                            "name": "", // назва змінної
                            "value": "" // значення змінної
                        }
                    ]
                }
            ]

        },

        "waiters": {

            /*
             * Програма-ініціалізатор виконується безпосередньо
             * перед запуском програми користувача та виконує дії,
             * направлені на підготовку додаткових файлів, необхідних
             * для роботи цієї програми, таких як: словників, файлів ресурсів, тощо.
             */

            "initializer": {
                "enabled": true,
                "path": "", // шлях до виконуваного файлу

                // Змінні середи для програми-ініціалізатора
                "environment_variables": [
                    {
                        "name": "",
                        "value": ""
                    }
                ]
            },

            /*
             * Програма-фіналізатор відповідальна за видалення усіх додаткових
             * файлів, створених програмою користувача, у тому числі файлів з
             * результатами роботи, а також файлів, створених програмою-ініціалізатором.
             */

            "finalizer": {
                "enabled": true,
                "path": "", // шлях до виконуваного файлу

                // Змінні середи для програми-фіналізатора
                "environment_variables": [
                    {
                        "name": "",
                        "value": ""
                    }
                ]
            }

        },

        // Розділ налаштувань вводу-виводу даних
        "io": {
            
            /*
             * Налаштування вхідних даних
             */

            "input": {
                // Перенаправлення стандартного вхідного потоку (читання з файлу)
                "stdin_redirect": {
                    "enabled": true,
                    "filename": "input.dat" // Розташування файлу відносно програми користувача
                }
            },

            /*
             * Налаштування вихідних даних
             */

            "output": {
                // Перенаправлення стандартного вихідного потоку (запис у файл)
                "stdout_redirect": {
                    "enabled": true,
                    "filename": "output.dat", // Розташування файлу відносно програми користувача
                    "clear_redunant_symbols": true // Видаляти залишкові пробіли та переведення каретки
                }
            }

        }

    }

}