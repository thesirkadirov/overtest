@model Sirkadirov.Overtest.WebApplication.Models.AuthController.AuthorizationModel

@{
    Layout = "Layouts/_DefaultEmptyLayout";
    ViewBag.PageTitle = Localizer["Авторизація | Overtest"].Value;
}

<main class="container no-selection-allowed">
    
    <div class="row mt-5 mb-5 pt-5 pb-5">
        
        <div class="col-md-6 content-v-align-center text-center">
            <img src="~/assets/svg/illustrations/undraw_authentication.svg" class="w-100" alt="Overtest"/>
        </div>
        
        <div class="col-md-6 content-v-align-center p-3">
            
            <h3>@Localizer["Авторизація в Overtest"]</h3>
            
            <form asp-action="Authorization">
                
                @Html.AntiForgeryToken()
                
                <div class="text-danger mt-2 mb-2">@Html.ValidationSummary()</div>
                
                <div class="form-group mt-2 mb-2">
                    <label asp-for="Email">@Localizer["Адреса e-mail:"]</label>
                    <input asp-for="Email" type="email" class="form-control rounded-lg" placeholder="@Localizer["franko@lnu.edu.ua"]"/>
                </div>
                
                <div class="form-group mt-2 mb-2">
                    <label asp-for="Password">@Localizer["Пароль:"]</label>
                    <input asp-for="Password" type="password" class="form-control rounded-lg" placeholder="@Localizer["***********"]"/>
                </div>
                
                <div class="custom-control custom-checkbox mt-2 mb-2">
                    <input asp-for="RememberMe" type="checkbox" class="custom-control-input"/>
                    <label asp-for="RememberMe" class="custom-control-label">@Localizer["Запам'ятати мене"]</label>
                </div>
                
                <input asp-for="ReturnUrl" type="hidden"/>
                
                <span class="d-block mt-2">
                    <button class="btn btn-dark rounded-lg" type="submit"><i class="fas fa-fingerprint"></i> @Localizer["Авторизуватися"]</button>
                    <a class="btn btn-link" asp-controller="Welcome" asp-action="Welcome"><i class="fas fa-angle-left"></i> @Localizer["Початкова сторінка"]</a>
                </span>
                
            </form>
            
        </div>
    </div>
    
</main>